@model IEnumerable<ErrorLoggerDataBase.appInformation>

@{
    ViewBag.Title = "activeApps";
}
<title>
    Active Apps
</title>
<h2>Active Applications</h2>
<h5 align="right">
    @Html.ActionLink("Go Home","Index")
</h5>

<table class="table">
    <tr>
        <th>
           <b>Application ID</b>
        </th>
        <th>
           <b> Application Name</b>
        </th>
        <th>
            <b> Application Description</b>
        </th>
        <th>
            <b> Application Created Time</b>
        </th>
        
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.appInformationID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AppName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AppDescription)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.createdDate)
        </td>
       
        <td>
            @Html.ActionLink("Disable", "changeStatusOfAppToInActive",new { appID = item.appInformationID },null)
          &nbsp;&nbsp;  @Html.ActionLink("Logs", "showLogs",new { appID = item.appInformationID },null)
            &nbsp;&nbsp;  @Html.ActionLink("Assign Users", "assignToUser" , new { appID=item.appInformationID},null)
            &nbsp;&nbsp; @Html.ActionLink("Unassign Users", "unassignUsers", new { appID = item.appInformationID }, null)
        </td>
    </tr>
}

</table>
