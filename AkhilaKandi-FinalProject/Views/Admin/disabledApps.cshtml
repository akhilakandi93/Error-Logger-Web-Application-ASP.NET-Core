@model IEnumerable<ErrorLoggerDataBase.appInformation>

@{
    ViewBag.Title = "disabledApps";
}
<title>
    Disable Application
</title>
<h2>Disabled Applications</h2>

<h5 align="right">
    @Html.ActionLink("Go Home", "Index")
</h5>

<table class="table">
    <tr>
        <th>
           <b>Application ID</b>
        </th>
        <th>
            <b>Application Name</b>
        </th>
        <th>
            <b>Application Description</b>
        </th>
        <th>
           <b>Application Created Time</b>
        </th>
        
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem=>item.appInformationID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AppName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AppDescription)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.createdDate)
        </td>
       
        <td>
            @Html.ActionLink("Enable", "changeStatusOfAppToActive", new { appID = item.appInformationID })
           &nbsp;&nbsp;&nbsp;
            @Html.ActionLink("Details", "showLogs", new { appID     = item.appInformationID }) 
           
        </td>
    </tr>
}

</table>
