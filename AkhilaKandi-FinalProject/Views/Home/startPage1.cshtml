@model ErrorLoggerDataBase.userDetails

@{
    ViewBag.Title = "startPage";
}
<style>
    form {
        border: 1px dotted #808080;
    }

    input[type=text], input[type=password] {
        width: 100%;
        padding: 12px 20px;
        margin: 8px 0;
        display: inline-block;
        border: 1px solid #ccc;
        box-sizing: border-box;
    }

    button {
        background-color: #0094ff;
        color: white;
        padding: 14px 20px;
        margin: 8px 0;
        border: none;
        cursor: pointer;
        width: 33%;
    }

        button:hover {
            opacity: 0.8;
        }

    .container {
      
    }

   
</style>
<html>

<body>

    <center>
        
        <h2>Login Form</h2>
        <form action="">
            <div class="container">
               <br />
                <label><b>Username</b></label>
                <input class="form-control" type="text" placeholder="Enter Username" name="username" required />
